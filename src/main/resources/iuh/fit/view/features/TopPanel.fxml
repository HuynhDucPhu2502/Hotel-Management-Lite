<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="0.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iuh.fit.controller.features.TopController">
   <children>
      <HBox minHeight="50.0" minWidth="800.0" style="-fx-background-color: RGB(70, 130, 180); -fx-alignment: center;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="clockLabel" style="-fx-font-size: 25px; -fx-font-weight: bold" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label fx:id="dateLabel" style="-fx-font-size: 17px;" textFill="WHITE">
               <font>
                  <Font size="17" />
               </font>
               <HBox.margin>
                  <Insets top="6.0" />
               </HBox.margin>
            </Label>
            <HBox fx:id="HboxForButton" styleClass="HboxForButton" HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutBtn" mnemonicParsing="false" style="-fx-background-color: transparent;" styleClass="button-with-image">
               <graphic>
                  <ImageView fx:id="img" fitHeight="39.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view">
                     <image>
                        <Image url="@../../icons/top_bar_icon/sign_out.png" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
         </padding></HBox>
   </children>
</AnchorPane>
